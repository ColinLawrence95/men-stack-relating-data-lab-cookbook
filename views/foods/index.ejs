<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>My Pantry</title>
    </head>
    <body>
        <%- include('../partials/_navbar.ejs') %>
        <h1>Welcome to my Pantry</h1>
        <ul>
            <% if (pantry && pantry.length > 0) { %> <%
            pantry.forEach(function(item) { %>
            <li>
                <%= item.name %>
                <form
                    class="delete-form"
                    action="/users/<%= user._id %>/foods/<%= item._id %>?_method=DELETE"
                    method="POST"
                >
                    <button class="delete-button" type="submit">Delete</button>
                </form>
                <a href="/users/<%= user._id %>/foods/<%= item._id %>/edit"
                    >Edit</a
                >
            </li>
            <% }); %> <% } else { %>
            <p>No items in your pantry yet.</p>
            <% } %>
        </ul>
        <a href="/users/<%= user._id%>/foods/new">Add new food!</a>
    </body>
</html>
